GLIB_CFLAGS = @GLIB_CFLAGS@
GLIB_CONFIG = @GLIB_CONFIG@
GLIB_LIBS = @GLIB_LIBS@
GMIME_CONFIG = $(X11BASE)/bin/gmime-config
GMIME_CFLAGS = `$(GMIME_CONFIG) --cflags`
GMIME_LIBS = `$(GMIME_CONFIG) --libs`

HEADER_FILES=config.h ../mdb/util.h hash.h weaver.h

CPPFLAGS=@CPPFLAGS@ $(GMIME_CFLAGS) -I$(X11BASE)/include
LDFLAGS=@LDFLAGS@ $(GMIME_LIBS)
CC = @CC@ $(CPPFLAGS)

all: weaverd

hash.o: hash.c $(HEADER_FILES)

weaver.o: weaver.c $(HEADER_FILES)

input.o: input.c $(HEADER_FILES)

int.o: int.c $(HEADER_FILES)

daemon.o: daemon.c $(HEADER_FILES)

weaverd: hash.o weaver.o input.o ../mdb/util.o daemon.o
	$(CC) $(CPPFLAGS) -o weaverd $(LDFLAGS) hash.o weaver.o input.o ../mdb/util.o daemon.o

int: hash.o weaver.o input.o ../mdb/util.o daemon.o int.o
	$(CC) $(CPPFLAGS) -o int $(LDFLAGS) hash.o weaver.o input.o ../mdb/util.o int.o

clean:
	$(RM) indexer *.o

TAGS: *.h *.c
	etags *.[ch]
